<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".view.LoginActivity">

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:id="@+id/groupsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logosplash"
            android:src="@drawable/ic_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="Agenda Al-Khidmah"
            android:id="@+id/textsplash"
            android:fontFamily="@font/kaushan"
            android:textColor="@color/primaryColor"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <EditText
            android:drawableLeft="@drawable/ic_bottom_navigation_profile"
            android:id="@+id/fieldakun"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email/Username/No.HP"
            android:inputType="textEmailAddress" />
        <EditText
            android:drawableLeft="@drawable/ic_icon_password"
            android:id="@+id/fieldpassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primaryColor"
        android:onClick="masukclick"
        android:id="@+id/buttonmasuk"
        android:text="Masuk"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Belum punya akun?" />

    <TextView
        android:onClick="daftarclick"
        android:id="@+id/buttondaftar"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAFTAR" />



</LinearLayout>
