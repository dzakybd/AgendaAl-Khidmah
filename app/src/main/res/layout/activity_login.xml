<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".view.LoginActivity">

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:id="@+id/groupsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logosplash"
            android:src="@drawable/ic_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="Agenda Al-Khidmah"
            android:id="@+id/textsplash"
            android:fontFamily="@font/kaushan"
            android:textColor="@color/primaryColor"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


        <EditText
            android:drawableLeft="@drawable/ic_nomor_hp"
            android:id="@+id/fieldakun"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nomor HP"
            android:inputType="textEmailAddress" />


        <EditText
            android:drawableLeft="@drawable/ic_icon_password"
            android:id="@+id/fieldpassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/primaryColor"
        android:onClick="masukclick"
        android:id="@+id/buttonmasuk"
        android:text="Masuk"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />


    <LinearLayout
        android:layout_marginLeft="@dimen/margin_full"
        android:layout_marginRight="@dimen/margin_full"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="Belum punya akun?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="daftarclick"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttondaftar"
            android:text="DAFTAR"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/margin_full"
        android:layout_marginRight="@dimen/margin_full"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="Ada kendala login?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:onClick="hubungiclick"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_hubungiadmin"
            android:text="Hubungi Admin"/>


    </LinearLayout>



</LinearLayout>
